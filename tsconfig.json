{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@calm-ui/theme": ["./packages/theme/index"],
      "@calm-ui/ripple": ["./packages/ripple/src/index"],
      "@calm-ui/button": ["./packages/button/src/index"],
      "@calm-ui/modal": ["./packages/modal/src/index"],
      "@calm-ui/popover": ["./packages/popover/src/index"],
      "@calm-ui/tooltip": ["./packages/tooltip/src/index"],
    },
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowJs": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}
